<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".termsandcondition"
    android:padding="10dp">

    <TextView
        android:id="@+id/terms_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="Terms and Conditions"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/terms_title"
        app:layout_constraintBottom_toTopOf="@+id/accept_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/terms_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Terms and Conditions content goes here." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. User Responsibilities"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="As a user of Kyle Car's Rental, you agree to provide accurate information during the sign-up process. You are responsible for maintaining the confidentiality of your account and password and for restricting access to your computer or device. You agree to accept responsibility for all activities that occur under your account or password."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Rental Agreement"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When you rent a car from Kyle Car's Rental, you agree to comply with the terms of the rental agreement. This includes returning the car on time, in the same condition as it was when rented, and adhering to all applicable traffic laws. Any violations or fines incurred during the rental period are your responsibility."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Insurance Policies"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kyle Car's Rental provides insurance coverage options for your rental. It is your responsibility to review and understand the coverage provided and to ensure that you have adequate insurance. In the event of an accident or damage to the rental car, you must report it to Kyle Car's Rental immediately."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Payment and Fees"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You agree to pay all rental fees, including any additional charges for optional services or damages. Payment is due at the time of rental, and you may be required to provide a valid credit card for security purposes. Late returns or failure to comply with the rental agreement may result in additional fees."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Cancellation Policy"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you need to cancel your reservation, please do so at least 24 hours in advance to avoid any cancellation fees. Cancellations made within 24 hours of the scheduled pickup time may incur a penalty. Refunds for cancellations will be processed according to our refund policy."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Privacy Policy"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We value your privacy and are committed to protecting your personal information. Our privacy policy outlines how we collect, use, and safeguard your data. By using our services, you agree to the terms outlined in our privacy policy."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Liability"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kyle Car's Rental is not liable for any direct, indirect, incidental, special, or consequential damages arising out of the use or inability to use our services. This includes, but is not limited to, damages for loss of profits, data, or other intangible losses. You agree to indemnify and hold Kyle Car's Rental harmless from any claims or demands made by any third party due to or arising out of your breach of these terms and conditions."
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/accept_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Accept"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>